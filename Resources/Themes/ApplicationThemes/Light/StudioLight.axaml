<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:avaloniaEdit="https://github.com/avaloniaui/avaloniaedit">
  <!--
    Studio Light Theme - inspired by Visual Studio 2022 Light Mode
    Accent Color: Purple (#68217A)
  -->

  <Design.PreviewWith>
    <Border Padding="20" Width="800" Height="600">
      <StackPanel Spacing="10">
        <Menu>
          <MenuItem Header="File">
            <MenuItem Header="Open" />
            <MenuItem Header="Save" />
            <Separator />
            <MenuItem Header="Exit" />
          </MenuItem>
        </Menu>
        <StackPanel Orientation="Horizontal" Spacing="10">
          <Button Content="Default Button" />
          <Button Content="Accent Button" Classes="accent" />
        </StackPanel>
        <CheckBox Content="Sample CheckBox" />
      </StackPanel>
    </Border>
  </Design.PreviewWith>

  <Style Selector="Window">
    <Setter Property="Background" Value="#F3F3F3" />
  </Style>

  <!-- Menu Bar -->
  <Style Selector="Menu">
    <Setter Property="Background" Value="#EEEEF2" />
  </Style>

  <!-- Menu Items -->
  <Style Selector="MenuItem">
    <Setter Property="Foreground" Value="#1E1E1E" />
  </Style>

  <Style Selector="MenuItem:pointerover /template/ ContentPresenter">
    <Setter Property="Background" Value="#C9DEF5" />
  </Style>

  <Style Selector="MenuItem:selected /template/ ContentPresenter">
    <Setter Property="Background" Value="#C9DEF5" />
  </Style>

  <Style Selector="MenuItem /template/ Border#PART_PopupBorder">
    <Setter Property="Background" Value="#F6F6F6" />
    <Setter Property="BorderBrush" Value="#CCCEDB" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="Padding" Value="2" />
  </Style>

  <!-- Separator -->
  <Style Selector="Separator">
    <Setter Property="Background" Value="#CCCCCC" />
    <Setter Property="Height" Value="1" />
    <Setter Property="Margin" Value="2,4" />
  </Style>

  <!-- Context Menu -->
  <Style Selector="ContextMenu">
    <Setter Property="Background" Value="#F6F6F6" />
    <Setter Property="BorderBrush" Value="#CCCEDB" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="Padding" Value="2" />
  </Style>

  <Style Selector="StackPanel.Toolbar">
    <Setter Property="Background" Value="#EEEEF2" />
  </Style>

  <!-- Toolbar Text -->
  <Style Selector="StackPanel.Toolbar TextBlock">
    <Setter Property="Foreground" Value="#1E1E1E" />
  </Style>

  <!-- CheckBox -->
  <Style Selector="CheckBox">
    <Setter Property="Foreground" Value="#1E1E1E" />
  </Style>

  <Style Selector="DockPanel.StatusBar">
    <Setter Property="Background" Value="#68217A" />
  </Style>

  <Style Selector="DockPanel.StatusBar TextBlock">
    <Setter Property="Foreground" Value="White" />
  </Style>

  <Style Selector="avaloniaEdit|TextEditor">
    <Setter Property="Background" Value="#FFFFFF" />
    <Setter Property="Foreground" Value="#1E1E1E" />
  </Style>

  <Style Selector="GridSplitter">
    <Setter Property="Background" Value="#CCCCCC" />
  </Style>

  <Style Selector="Border">
    <Setter Property="BorderBrush" Value="#CCCEDB" />
  </Style>

  <!--  Default Button Style  -->
  <Style Selector="Button">
    <Setter Property="Background" Value="#FFFFFF" />
    <Setter Property="Foreground" Value="#1E1E1E" />
    <Setter Property="BorderBrush" Value="#CCCCCC" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="CornerRadius" Value="3" />
    <Setter Property="Padding" Value="12,6" />
    <Setter Property="HorizontalContentAlignment" Value="Center" />
    <Setter Property="VerticalContentAlignment" Value="Center" />
    <Setter Property="FontWeight" Value="SemiBold" />
    <Setter Property="MinWidth" Value="80" />
  </Style>

  <Style Selector="Button:pointerover">
    <Setter Property="Background" Value="#C9DEF5" />
    <Setter Property="BorderBrush" Value="#3399FF" />
  </Style>

  <Style Selector="Button:pressed">
    <Setter Property="Background" Value="#007ACC" />
    <Setter Property="Foreground" Value="White" />
  </Style>

  <Style Selector="Button:disabled">
    <Setter Property="Opacity" Value="0.6" />
  </Style>

  <!--  Accent Button Style  -->
  <Style Selector="Button.accent">
    <Setter Property="Background" Value="#68217A" />
    <Setter Property="Foreground" Value="White" />
    <Setter Property="BorderBrush" Value="#5A1C6B" />
  </Style>

  <Style Selector="Button.accent:pointerover">
    <Setter Property="Background" Value="#7D2D91" />
  </Style>

  <Style Selector="Button.accent:pressed">
    <Setter Property="Background" Value="#5A1C6B" />
  </Style>

  <Style Selector="Button.accent:disabled">
    <Setter Property="Background" Value="#A366B0" />
  </Style>
</Styles>
