<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:avaloniaEdit="https://github.com/avaloniaui/avaloniaedit">
  <!--
    Professional Gray Theme - inspired by VS Code Light
    Accent Color: Blue (#007ACC)
  -->

  <Design.PreviewWith>
    <Border Padding="20" Width="800" Height="600">
      <StackPanel Spacing="10">
        <Menu>
          <MenuItem Header="File">
            <MenuItem Header="Open" />
            <MenuItem Header="Save" />
            <Separator />
            <MenuItem Header="Exit" />
          </MenuItem>
        </Menu>
        <StackPanel Orientation="Horizontal" Spacing="10">
          <Button Content="Default Button" />
          <Button Content="Accent Button" Classes="accent" />
        </StackPanel>
        <CheckBox Content="Sample CheckBox" />
      </StackPanel>
    </Border>
  </Design.PreviewWith>

  <Style Selector="Window">
    <Setter Property="Background" Value="#F5F5F5" />
    <Setter Property="Foreground" Value="#1E1E1E" />
  </Style>

  <!-- Menu Bar -->
  <Style Selector="Menu">
    <Setter Property="Background" Value="#E8E8E8" />
    <Setter Property="Foreground" Value="#1E1E1E" />
  </Style>

  <!-- Menu Items -->
  <Style Selector="MenuItem">
    <Setter Property="Foreground" Value="#333333" />
  </Style>

  <Style Selector="MenuItem:pointerover /template/ ContentPresenter">
    <Setter Property="Background" Value="#D4D4D4" />
    <Setter Property="Foreground" Value="#000000" />
  </Style>

  <Style Selector="MenuItem:selected /template/ ContentPresenter">
    <Setter Property="Background" Value="#D4D4D4" />
    <Setter Property="Foreground" Value="#000000" />
  </Style>

  <Style Selector="MenuItem:disabled /template/ ContentPresenter">
    <Setter Property="Foreground" Value="#A0A0A0" />
  </Style>

  <Style Selector="MenuItem /template/ Border#PART_PopupBorder">
    <Setter Property="Background" Value="#F0F0F0" />
    <Setter Property="BorderBrush" Value="#D0D0D0" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="Padding" Value="2" />
  </Style>

  <!-- Separator -->
  <Style Selector="Separator">
    <Setter Property="Background" Value="#D4D4D4" />
    <Setter Property="Height" Value="1" />
    <Setter Property="Margin" Value="2,4" />
  </Style>

  <!-- Context Menu -->
  <Style Selector="ContextMenu">
    <Setter Property="Background" Value="#F0F0F0" />
    <Setter Property="BorderBrush" Value="#D0D0D0" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="Padding" Value="2" />
    <Setter Property="Foreground" Value="#1E1E1E" />
  </Style>

  <Style Selector="ContextMenu MenuItem">
    <Setter Property="Foreground" Value="#1E1E1E" />
  </Style>

  <Style Selector="StackPanel.Toolbar">
    <Setter Property="Background" Value="#E8E8E8" />
  </Style>

  <!-- Toolbar Text -->
  <Style Selector="StackPanel.Toolbar TextBlock">
    <Setter Property="Foreground" Value="#333333" />
  </Style>

  <!-- CheckBox -->
  <Style Selector="CheckBox">
    <Setter Property="Foreground" Value="#333333" />
  </Style>

  <Style Selector="DockPanel.StatusBar">
    <Setter Property="Background" Value="#007ACC" />
  </Style>

  <Style Selector="DockPanel.StatusBar TextBlock">
    <Setter Property="Foreground" Value="White" />
  </Style>

  <Style Selector="avaloniaEdit|TextEditor">
    <Setter Property="Background" Value="#FFFFFF" />
    <Setter Property="Foreground" Value="#333333" />
  </Style>

  <Style Selector="GridSplitter">
    <Setter Property="Background" Value="#D4D4D4" />
  </Style>

  <Style Selector="Border">
    <Setter Property="BorderBrush" Value="#D0D0D0" />
  </Style>

    <!-- TextBlock - Global text styling -->
  <Style Selector="TextBlock">
    <Setter Property="Foreground" Value="#1E1E1E" />
  </Style>

  <!-- Dialog styling -->
  <Style Selector="Window.dialog">
    <Setter Property="Background" Value="#E8E8E8" />
    <Setter Property="Foreground" Value="#1E1E1E" />
  </Style>

  <Style Selector="Window.dialog TextBlock">
    <Setter Property="Foreground" Value="#1E1E1E" />
  </Style>

  <!--  Default Button Style  -->
  <Style Selector="Button">
    <Setter Property="Background" Value="#FFFFFF" />
    <Setter Property="Foreground" Value="#333333" />
    <Setter Property="BorderBrush" Value="#CCCCCC" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="CornerRadius" Value="3" />
    <Setter Property="Padding" Value="12,6" />
    <Setter Property="HorizontalContentAlignment" Value="Center" />
    <Setter Property="VerticalContentAlignment" Value="Center" />
    <Setter Property="FontWeight" Value="SemiBold" />
    <Setter Property="MinWidth" Value="80" />
  </Style>

  <Style Selector="Button:pointerover">
    <Setter Property="Background" Value="#E8E8E8" />
    <Setter Property="Foreground" Value="#000000" />
    <Setter Property="BorderBrush" Value="#007ACC" />
  </Style>

  <Style Selector="Button:pressed">
    <Setter Property="Background" Value="#007ACC" />
    <Setter Property="Foreground" Value="#000000" />
  </Style>

  <Style Selector="Button:disabled">
    <Setter Property="Opacity" Value="0.6" />
    <Setter Property="Foreground" Value="#A0A0A0" />
  </Style>

  <!--  Accent Button Style  -->
  <Style Selector="Button.accent">
    <Setter Property="Background" Value="#007ACC" />
    <Setter Property="Foreground" Value="White" />
    <Setter Property="BorderBrush" Value="#005A9E" />
  </Style>

  <Style Selector="Button.accent:pointerover">
    <Setter Property="Background" Value="#1C86D5" />
  </Style>

  <Style Selector="Button.accent:pressed">
    <Setter Property="Background" Value="#005A9E" />
  </Style>

  <Style Selector="Button.accent:disabled">
    <Setter Property="Background" Value="#66AEDD" />
  </Style>
</Styles>
