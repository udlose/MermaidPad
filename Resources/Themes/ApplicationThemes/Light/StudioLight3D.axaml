<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:avaloniaEdit="https://github.com/avaloniaui/avaloniaedit">
  <!--
    Studio Light 3D Theme - Skeuomorphic version of Studio Light
    Accent Color: Purple (#68217A)
    Design: Moderate skeuomorphism with gradients, shadows, and depth
  -->

  <Design.PreviewWith>
    <Border Padding="20" Width="800" Height="600">
      <StackPanel Spacing="10">
        <Menu>
          <MenuItem Header="File">
            <MenuItem Header="Open" />
            <MenuItem Header="Save" />
            <Separator />
            <MenuItem Header="Exit" />
          </MenuItem>
        </Menu>
        <StackPanel Orientation="Horizontal" Spacing="10">
          <Button Content="Default Button" />
          <Button Content="Accent Button" Classes="accent" />
        </StackPanel>
        <CheckBox Content="Sample CheckBox" />
      </StackPanel>
    </Border>
  </Design.PreviewWith>

  <Style Selector="Window">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#F8F8F8" Offset="0" />
        <GradientStop Color="#F0F0F0" Offset="1" />
      </LinearGradientBrush>
    </Setter>
  </Style>

  <!-- Menu Bar -->
  <Style Selector="Menu">
    <Setter Property="Background" Value="#EEEEF2" />
    <Setter Property="Foreground" Value="#1E1E1E" />
  </Style>

  <!-- Menu Items -->
  <Style Selector="MenuItem">
    <Setter Property="Foreground" Value="#1E1E1E" />
  </Style>

  <Style Selector="MenuItem:pointerover /template/ ContentPresenter">
    <Setter Property="Background" Value="#C9DEF5" />
    <Setter Property="Foreground" Value="#000000" />
  </Style>

  <Style Selector="MenuItem:selected /template/ ContentPresenter">
    <Setter Property="Background" Value="#C9DEF5" />
    <Setter Property="Foreground" Value="#000000" />
  </Style>

  <Style Selector="MenuItem:disabled /template/ ContentPresenter">
    <Setter Property="Foreground" Value="#A0A0A0" />
  </Style>

  <Style Selector="MenuItem /template/ Border#PART_PopupBorder">
    <Setter Property="Background" Value="#F6F6F6" />
    <Setter Property="BorderBrush" Value="#CCCEDB" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="Padding" Value="2" />
  </Style>

  <!-- Separator -->
  <Style Selector="Separator">
    <Setter Property="Background" Value="#CCCCCC" />
    <Setter Property="Height" Value="1" />
    <Setter Property="Margin" Value="2,4" />
  </Style>

  <!-- Context Menu -->
  <Style Selector="ContextMenu">
    <Setter Property="Background" Value="#F6F6F6" />
    <Setter Property="BorderBrush" Value="#CCCEDB" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="Padding" Value="2" />
    <Setter Property="Foreground" Value="#1E1E1E" />
  </Style>

  <Style Selector="ContextMenu MenuItem">
    <Setter Property="Foreground" Value="#1E1E1E" />
  </Style>

  <Style Selector="StackPanel.Toolbar">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#F5F5F7" Offset="0" />
        <GradientStop Color="#E8E8EC" Offset="1" />
      </LinearGradientBrush>
    </Setter>
  </Style>

  <!-- Toolbar Text -->
  <Style Selector="StackPanel.Toolbar TextBlock">
    <Setter Property="Foreground" Value="#1E1E1E" />
  </Style>

  <!-- CheckBox -->
  <Style Selector="CheckBox">
    <Setter Property="Foreground" Value="#1E1E1E" />
  </Style>

  <Style Selector="DockPanel.StatusBar">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#7D2D91" Offset="0" />
        <GradientStop Color="#5A1C6B" Offset="1" />
      </LinearGradientBrush>
    </Setter>
  </Style>

  <Style Selector="DockPanel.StatusBar TextBlock">
    <Setter Property="Foreground" Value="White" />
  </Style>

  <Style Selector="avaloniaEdit|TextEditor">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#FFFFFF" Offset="0" />
        <GradientStop Color="#FAFAFA" Offset="1" />
      </LinearGradientBrush>
    </Setter>
    <Setter Property="Foreground" Value="#1E1E1E" />
  </Style>

  <Style Selector="GridSplitter">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,0%">
        <GradientStop Color="#D4D4D4" Offset="0" />
        <GradientStop Color="#C0C0C0" Offset="0.5" />
        <GradientStop Color="#D4D4D4" Offset="1" />
      </LinearGradientBrush>
    </Setter>
  </Style>

  <Style Selector="Border">
    <Setter Property="BorderBrush">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#E0E0E0" Offset="0" />
        <GradientStop Color="#C0C0C0" Offset="1" />
      </LinearGradientBrush>
    </Setter>
  </Style>

  <!--  Default Button Style (Skeuomorphic)  -->
  <Style Selector="Button">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#FFFFFF" Offset="0" />
        <GradientStop Color="#F0F0F0" Offset="0.5" />
        <GradientStop Color="#E8E8E8" Offset="1" />
      </LinearGradientBrush>
    </Setter>
    <Setter Property="Foreground" Value="#1E1E1E" />
    <Setter Property="BorderBrush">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#D0D0D0" Offset="0" />
        <GradientStop Color="#A0A0A0" Offset="1" />
      </LinearGradientBrush>
    </Setter>
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="CornerRadius" Value="5" />
    <Setter Property="Padding" Value="14,7" />
    <Setter Property="HorizontalContentAlignment" Value="Center" />
    <Setter Property="VerticalContentAlignment" Value="Center" />
    <Setter Property="FontWeight" Value="SemiBold" />
    <Setter Property="MinWidth" Value="80" />
    <Setter Property="Effect">
      <DropShadowEffect Color="#40000000" OffsetX="0" OffsetY="2" BlurRadius="4" />
    </Setter>
  </Style>

  <Style Selector="Button:pointerover">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#E0F0FF" Offset="0" />
        <GradientStop Color="#C9DEF5" Offset="0.5" />
        <GradientStop Color="#B3D4F0" Offset="1" />
      </LinearGradientBrush>
    </Setter>
    <Setter Property="BorderBrush">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#3399FF" Offset="0" />
        <GradientStop Color="#007ACC" Offset="1" />
      </LinearGradientBrush>
    </Setter>
    <Setter Property="Effect">
      <DropShadowEffect Color="#60007ACC" OffsetX="0" OffsetY="2" BlurRadius="6" />
    </Setter>
  </Style>

  <Style Selector="Button:pressed">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#005A9E" Offset="0" />
        <GradientStop Color="#007ACC" Offset="0.5" />
        <GradientStop Color="#0091E0" Offset="1" />
      </LinearGradientBrush>
    </Setter>
    <Setter Property="Foreground" Value="White" />
    <Setter Property="Effect">
      <DropShadowEffect Color="#80000000" OffsetX="0" OffsetY="1" BlurRadius="2" />
    </Setter>
    <Setter Property="RenderTransform">
      <TranslateTransform Y="1" />
    </Setter>
  </Style>

  <Style Selector="Button:disabled">
    <Setter Property="Opacity" Value="0.5" />
    <Setter Property="Foreground" Value="#A0A0A0" />
    <Setter Property="Effect" Value="{x:Null}" />
  </Style>

  <!--  Accent Button Style (Skeuomorphic)  -->
  <Style Selector="Button.accent">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#8A3A9D" Offset="0" />
        <GradientStop Color="#68217A" Offset="0.5" />
        <GradientStop Color="#5A1C6B" Offset="1" />
      </LinearGradientBrush>
    </Setter>
    <Setter Property="Foreground" Value="White" />
    <Setter Property="BorderBrush">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#9D4DB0" Offset="0" />
        <GradientStop Color="#4A1555" Offset="1" />
      </LinearGradientBrush>
    </Setter>
    <Setter Property="Effect">
      <DropShadowEffect Color="#5068217A" OffsetX="0" OffsetY="2" BlurRadius="4" />
    </Setter>
  </Style>

  <Style Selector="Button.accent:pointerover">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#A04BB5" Offset="0" />
        <GradientStop Color="#7D2D91" Offset="0.5" />
        <GradientStop Color="#68217A" Offset="1" />
      </LinearGradientBrush>
    </Setter>
    <Setter Property="Effect">
      <DropShadowEffect Color="#7068217A" OffsetX="0" OffsetY="2" BlurRadius="6" />
    </Setter>
  </Style>

  <Style Selector="Button.accent:pressed">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#4A1555" Offset="0" />
        <GradientStop Color="#5A1C6B" Offset="0.5" />
        <GradientStop Color="#68217A" Offset="1" />
      </LinearGradientBrush>
    </Setter>
    <Setter Property="Effect">
      <DropShadowEffect Color="#90000000" OffsetX="0" OffsetY="1" BlurRadius="2" />
    </Setter>
    <Setter Property="RenderTransform">
      <TranslateTransform Y="1" />
    </Setter>
  </Style>

  <Style Selector="Button.accent:disabled">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#C299CC" Offset="0" />
        <GradientStop Color="#A366B0" Offset="1" />
      </LinearGradientBrush>
    </Setter>
    <Setter Property="Opacity" Value="0.5" />
    <Setter Property="Effect" Value="{x:Null}" />
  </Style>
</Styles>
