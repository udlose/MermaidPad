<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:avaloniaEdit="https://github.com/avaloniaui/avaloniaedit">
  <!--
    VS 2022 Dark Theme - replica of Visual Studio 2022 dark mode
    Accent Color: Blue (#007ACC)
    This is the default dark theme.
  -->

  <Design.PreviewWith>
    <Border Padding="20" Width="800" Height="600">
      <StackPanel Spacing="10">
        <Menu>
          <MenuItem Header="File">
            <MenuItem Header="Open" />
            <MenuItem Header="Save" />
            <Separator />
            <MenuItem Header="Exit" />
          </MenuItem>
        </Menu>
        <StackPanel Orientation="Horizontal" Spacing="10">
          <Button Content="Default Button" />
          <Button Content="Accent Button" Classes="accent" />
        </StackPanel>
        <CheckBox Content="Sample CheckBox" />
      </StackPanel>
    </Border>
  </Design.PreviewWith>

  <Style Selector="Window">
    <Setter Property="Background" Value="#1E1E1E" />
    <Setter Property="Foreground" Value="#DCDCDC" />
  </Style>

  <!-- Menu Bar -->
  <Style Selector="Menu">
    <Setter Property="Background" Value="#2D2D30" />
    <Setter Property="Foreground" Value="#DCDCDC" />
  </Style>

  <!-- Menu Items -->
  <Style Selector="MenuItem">
    <Setter Property="Foreground" Value="#DCDCDC" />
  </Style>

  <Style Selector="MenuItem:pointerover /template/ ContentPresenter">
    <Setter Property="Background" Value="#3E3E40" />
    <Setter Property="Foreground" Value="#FFFFFF" />
  </Style>

  <Style Selector="MenuItem:selected /template/ ContentPresenter">
    <Setter Property="Background" Value="#3E3E40" />
    <Setter Property="Foreground" Value="#FFFFFF" />
  </Style>

  <Style Selector="MenuItem:disabled /template/ ContentPresenter">
    <Setter Property="Foreground" Value="#656565" />
  </Style>

  <!-- Menu Popup Border (Popup itself doesn't have Background property) -->
  <Style Selector="MenuItem /template/ Border#PART_PopupBorder">
    <Setter Property="Background" Value="#1B1B1C" />
    <Setter Property="BorderBrush" Value="#3F3F46" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="Padding" Value="2" />
  </Style>

  <!-- Separator -->
  <Style Selector="Separator">
    <Setter Property="Background" Value="#3F3F46" />
    <Setter Property="Height" Value="1" />
    <Setter Property="Margin" Value="2,4" />
  </Style>

  <!-- Context Menu -->
  <Style Selector="ContextMenu">
    <Setter Property="Background" Value="#1B1B1C" />
    <Setter Property="BorderBrush" Value="#3F3F46" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="Padding" Value="2" />
    <Setter Property="Foreground" Value="#DCDCDC" />
  </Style>

  <Style Selector="ContextMenu MenuItem">
    <Setter Property="Foreground" Value="#DCDCDC" />
  </Style>

  <Style Selector="StackPanel.Toolbar">
    <Setter Property="Background" Value="#2D2D30" />
  </Style>

  <!-- Toolbar Text -->
  <Style Selector="StackPanel.Toolbar TextBlock">
    <Setter Property="Foreground" Value="#DCDCDC" />
  </Style>

  <!-- CheckBox -->
  <Style Selector="CheckBox">
    <Setter Property="Foreground" Value="#DCDCDC" />
  </Style>

  <Style Selector="DockPanel.StatusBar">
    <Setter Property="Background" Value="#007ACC" />
  </Style>

  <Style Selector="DockPanel.StatusBar TextBlock">
    <Setter Property="Foreground" Value="#FFFFFF" />
  </Style>

  <Style Selector="avaloniaEdit|TextEditor">
    <Setter Property="Background" Value="#1E1E1E" />
    <Setter Property="Foreground" Value="#DCDCDC" />
  </Style>

  <Style Selector="GridSplitter">
    <Setter Property="Background" Value="#3F3F46" />
  </Style>

  <Style Selector="Border">
    <Setter Property="BorderBrush" Value="#3F3F46" />
  </Style>

  <!-- TextBlock - Global text styling -->
  <Style Selector="TextBlock">
    <Setter Property="Foreground" Value="#DCDCDC" />
  </Style>

  <!-- Dialog styling -->
  <Style Selector="Window.dialog">
    <Setter Property="Background" Value="#2D2D30" />
    <Setter Property="Foreground" Value="#DCDCDC" />
  </Style>

  <Style Selector="Window.dialog TextBlock">
    <Setter Property="Foreground" Value="#DCDCDC" />
  </Style>

  <!--  Default Button Style  -->
  <Style Selector="Button">
    <Setter Property="Background" Value="#3E3E42" />
    <Setter Property="Foreground" Value="#DCDCDC" />
    <Setter Property="BorderBrush" Value="#3F3F46" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="CornerRadius" Value="3" />
    <Setter Property="Padding" Value="12,6" />
    <Setter Property="HorizontalContentAlignment" Value="Center" />
    <Setter Property="VerticalContentAlignment" Value="Center" />
    <Setter Property="FontWeight" Value="SemiBold" />
    <Setter Property="MinWidth" Value="80" />
  </Style>

  <Style Selector="Button:pointerover /template/ ContentPresenter">
    <Setter Property="Background" Value="#505053" />
    <Setter Property="Foreground" Value="#FFFFFF" />
  </Style>

  <Style Selector="Button:pointerover">
    <Setter Property="Background" Value="#505053" />
    <Setter Property="Foreground" Value="#FFFFFF" />
  </Style>

  <Style Selector="Button:pressed /template/ ContentPresenter">
    <Setter Property="Background" Value="#5A5A5E" />
    <Setter Property="Foreground" Value="#FFFFFF" />
  </Style>

  <Style Selector="Button:pressed">
    <Setter Property="Background" Value="#5A5A5E" />
    <Setter Property="Foreground" Value="#FFFFFF" />
  </Style>

  <Style Selector="Button:disabled">
    <Setter Property="Opacity" Value="0.6" />
    <Setter Property="Foreground" Value="#656565" />
  </Style>

  <!--  Accent Button Style  -->
  <Style Selector="Button.accent">
    <Setter Property="Background" Value="#007ACC" />
    <Setter Property="Foreground" Value="White" />
    <Setter Property="BorderBrush" Value="#005A9E" />
  </Style>

  <Style Selector="Button.accent:pointerover">
    <Setter Property="Background" Value="#1C86D5" />
    <Setter Property="Foreground" Value="White" />
  </Style>

  <Style Selector="Button.accent:pressed">
    <Setter Property="Background" Value="#0866B0" />
    <Setter Property="Foreground" Value="White" />
  </Style>

  <Style Selector="Button.accent:disabled">
    <Setter Property="Background" Value="#66AEDD" />
    <Setter Property="Foreground" Value="White" />
  </Style>
</Styles>
