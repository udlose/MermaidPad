<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:avaloniaEdit="https://github.com/avaloniaui/avaloniaedit">
  <!--
    Charcoal Pro Theme - warmer dark theme
    Accent Color: Green (#16C60C)
  -->

  <Style Selector="Window">
    <Setter Property="Background" Value="#1F1F1F" />
  </Style>

  <Style Selector="StackPanel.Toolbar">
    <Setter Property="Background" Value="#2B2B2B" />
  </Style>

<!--  <Style Selector="StatusBar, DockPanel.StatusBar">
    <Setter Property="Background" Value="#16C60C" />
  </Style>

  <Style Selector="StatusBar TextBlock, DockPanel.StatusBar TextBlock">
    <Setter Property="Foreground" Value="White" />
  </Style>
-->
  <Style Selector="avaloniaEdit|TextEditor">
    <Setter Property="Background" Value="#1F1F1F" />
    <Setter Property="Foreground" Value="#CCCCCC" />
  </Style>

  <Style Selector="GridSplitter">
    <Setter Property="Background" Value="#3E3E42" />
  </Style>

  <Style Selector="Border">
    <Setter Property="BorderBrush" Value="#3E3E42" />
  </Style>

  <!--  Default Button Style  -->
  <Style Selector="Button">
    <Setter Property="Background" Value="#3E3E42" />
    <Setter Property="Foreground" Value="#CCCCCC" />
    <Setter Property="BorderBrush" Value="#3E3E42" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="CornerRadius" Value="3" />
    <Setter Property="Padding" Value="12,6" />
    <Setter Property="HorizontalContentAlignment" Value="Center" />
    <Setter Property="VerticalContentAlignment" Value="Center" />
    <Setter Property="FontWeight" Value="SemiBold" />
    <Setter Property="MinWidth" Value="80" />
  </Style>

  <Style Selector="Button:pointerover">
    <Setter Property="Background" Value="#505053" />
  </Style>

  <Style Selector="Button:pressed">
    <Setter Property="Background" Value="#5A5A5E" />
  </Style>

  <Style Selector="Button:disabled">
    <Setter Property="Opacity" Value="0.6" />
  </Style>

  <!--  Accent Button Style  -->
  <Style Selector="Button.accent">
    <Setter Property="Background" Value="#16C60C" />
    <Setter Property="Foreground" Value="White" />
    <Setter Property="BorderBrush" Value="#129E0B" />
  </Style>

  <Style Selector="Button.accent:pointerover">
    <Setter Property="Background" Value="#1EDE15" />
  </Style>

  <Style Selector="Button.accent:pressed">
    <Setter Property="Background" Value="#129E0B" />
  </Style>

  <Style Selector="Button.accent:disabled">
    <Setter Property="Background" Value="#6FDB67" />
  </Style>
</Styles>
