<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:avaloniaEdit="https://github.com/avaloniaui/avaloniaedit">
  <!--
    VS Dark 3D Theme - Skeuomorphic version of VS Dark
    Accent Color: Blue (#007ACC)
    Design: Moderate skeuomorphism with gradients, shadows, and depth
  -->

  <Style Selector="Window">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#252526" Offset="0" />
        <GradientStop Color="#1B1B1C" Offset="1" />
      </LinearGradientBrush>
    </Setter>
  </Style>

  <Style Selector="StackPanel.Toolbar">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#3E3E42" Offset="0" />
        <GradientStop Color="#2D2D30" Offset="0.5" />
        <GradientStop Color="#252526" Offset="1" />
      </LinearGradientBrush>
    </Setter>
  </Style>

