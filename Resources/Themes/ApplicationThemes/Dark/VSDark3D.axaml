    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#1C86D5" Offset="0" />
        <GradientStop Color="#005A9E" Offset="1" />
      </LinearGradientBrush>
    </Setter>
  </Style>

  <Style Selector="StatusBar TextBlock, DockPanel.StatusBar TextBlock">
    <Setter Property="Foreground" Value="White" />
  </Style>-->

  <Style Selector="avaloniaEdit|TextEditor">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#1E1E1E" Offset="0" />
        <GradientStop Color="#1A1A1A" Offset="1" />
      </LinearGradientBrush>
    </Setter>
    <Setter Property="Foreground" Value="#D4D4D4" />
  </Style>

  <Style Selector="GridSplitter">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,0%">
        <GradientStop Color="#505053" Offset="0" />
        <GradientStop Color="#3F3F46" Offset="0.5" />
        <GradientStop Color="#505053" Offset="1" />
      </LinearGradientBrush>
    </Setter>
  </Style>

  <Style Selector="Border">
    <Setter Property="BorderBrush">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#505053" Offset="0" />
        <GradientStop Color="#3F3F46" Offset="1" />
      </LinearGradientBrush>
    </Setter>
  </Style>

  <!--  Default Button Style (Skeuomorphic)  -->
  <Style Selector="Button">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#505053" Offset="0" />
        <GradientStop Color="#3E3E42" Offset="0.5" />
        <GradientStop Color="#333337" Offset="1" />
      </LinearGradientBrush>
    </Setter>
    <Setter Property="Foreground" Value="#D4D4D4" />
    <Setter Property="BorderBrush">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#5A5A5E" Offset="0" />
        <GradientStop Color="#2D2D30" Offset="1" />
      </LinearGradientBrush>
    </Setter>
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="CornerRadius" Value="5" />
    <Setter Property="Padding" Value="14,7" />
    <Setter Property="HorizontalContentAlignment" Value="Center" />
    <Setter Property="VerticalContentAlignment" Value="Center" />
    <Setter Property="FontWeight" Value="SemiBold" />
    <Setter Property="MinWidth" Value="80" />
    <Setter Property="Effect">
      <DropShadowEffect Color="#60000000" OffsetX="0" OffsetY="2" BlurRadius="4" />
    </Setter>
  </Style>

  <Style Selector="Button:pointerover">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#626269" Offset="0" />
        <GradientStop Color="#505053" Offset="0.5" />
        <GradientStop Color="#434347" Offset="1" />
      </LinearGradientBrush>
    </Setter>
    <Setter Property="BorderBrush">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#3399FF" Offset="0" />
        <GradientStop Color="#007ACC" Offset="1" />
      </LinearGradientBrush>
    </Setter>
    <Setter Property="Effect">
      <DropShadowEffect Color="#80007ACC" OffsetX="0" OffsetY="2" BlurRadius="6" />
    </Setter>
  </Style>

  <Style Selector="Button:pressed">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#2D2D30" Offset="0" />
        <GradientStop Color="#3E3E42" Offset="0.5" />
        <GradientStop Color="#505053" Offset="1" />
      </LinearGradientBrush>
    </Setter>
    <Setter Property="Effect">
      <DropShadowEffect Color="#A0000000" OffsetX="0" OffsetY="1" BlurRadius="2" />
    </Setter>
    <Setter Property="RenderTransform">
      <TranslateTransform Y="1" />
    </Setter>
  </Style>

  <Style Selector="Button:disabled">
    <Setter Property="Opacity" Value="0.4" />
    <Setter Property="Effect" Value="{x:Null}" />
  </Style>

  <!--  Accent Button Style (Skeuomorphic)  -->
  <Style Selector="Button.accent">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#1C86D5" Offset="0" />
        <GradientStop Color="#007ACC" Offset="0.5" />
        <GradientStop Color="#005A9E" Offset="1" />
      </LinearGradientBrush>
    </Setter>
    <Setter Property="Foreground" Value="White" />
    <Setter Property="BorderBrush">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#3399FF" Offset="0" />
        <GradientStop Color="#004280" Offset="1" />
      </LinearGradientBrush>
    </Setter>
    <Setter Property="Effect">
      <DropShadowEffect Color="#70007ACC" OffsetX="0" OffsetY="2" BlurRadius="4" />
    </Setter>
  </Style>

  <Style Selector="Button.accent:pointerover">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#3399FF" Offset="0" />
        <GradientStop Color="#1C86D5" Offset="0.5" />
        <GradientStop Color="#007ACC" Offset="1" />
      </LinearGradientBrush>
    </Setter>
    <Setter Property="Effect">
      <DropShadowEffect Color="#90007ACC" OffsetX="0" OffsetY="2" BlurRadius="6" />
    </Setter>
  </Style>

  <Style Selector="Button.accent:pressed">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#004280" Offset="0" />
        <GradientStop Color="#0866B0" Offset="0.5" />
        <GradientStop Color="#1C86D5" Offset="1" />
      </LinearGradientBrush>
    </Setter>
    <Setter Property="Effect">
      <DropShadowEffect Color="#B0000000" OffsetX="0" OffsetY="1" BlurRadius="2" />
    </Setter>
    <Setter Property="RenderTransform">
      <TranslateTransform Y="1" />
    </Setter>
  </Style>

  <Style Selector="Button.accent:disabled">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#99C7E8" Offset="0" />
        <GradientStop Color="#66AEDD" Offset="1" />
      </LinearGradientBrush>
    </Setter>
    <Setter Property="Opacity" Value="0.4" />
    <Setter Property="Effect" Value="{x:Null}" />
  </Style>
</Styles>
