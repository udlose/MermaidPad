<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:avaloniaEdit="https://github.com/avaloniaui/avaloniaedit"
        xmlns:designerOnly="clr-namespace:MermaidPad.Views.UserControls.DesignerOnly">
  <!--
    Midnight Developer 3D Theme - Skeuomorphic version of Midnight Developer
    Accent Color: Cyan (#00D9FF)
    Design: Moderate skeuomorphism with gradients, shadows, and depth
  -->

  <Design.PreviewWith>
    <designerOnly:ThemePreviewer />
  </Design.PreviewWith>
  
  <Style Selector="Window">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#161B22" Offset="0" />
        <GradientStop Color="#0D1117" Offset="1" />
      </LinearGradientBrush>
    </Setter>
  </Style>

  <!-- Menu Bar -->
  <Style Selector="Menu">
    <Setter Property="Background" Value="#161B22" />
    <Setter Property="Foreground" Value="#DCDCDC" />
  </Style>

  <!-- Menu Items -->
  <Style Selector="MenuItem">
    <Setter Property="Foreground" Value="#C9D1D9" />
  </Style>

  <Style Selector="MenuItem:pointerover /template/ ContentPresenter">
    <Setter Property="Background" Value="#21262D" />
    <Setter Property="Foreground" Value="#FFFFFF" />
  </Style>

  <Style Selector="MenuItem:selected /template/ ContentPresenter">
    <Setter Property="Background" Value="#21262D" />
    <Setter Property="Foreground" Value="#FFFFFF" />
  </Style>

  <Style Selector="MenuItem:disabled /template/ ContentPresenter">
    <Setter Property="Foreground" Value="#656565" />
  </Style>

  <Style Selector="MenuItem /template/ Border#PART_PopupBorder">
    <Setter Property="Background" Value="#161B22" />
    <Setter Property="BorderBrush" Value="#30363D" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="Padding" Value="2" />
  </Style>

  <!-- Separator -->
  <Style Selector="Separator">
    <Setter Property="Background" Value="#30363D" />
    <Setter Property="Height" Value="1" />
    <Setter Property="Margin" Value="2,4" />
  </Style>

  <!-- Context Menu -->
  <Style Selector="ContextMenu">
    <Setter Property="Background" Value="#161B22" />
    <Setter Property="BorderBrush" Value="#30363D" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="Padding" Value="2" />
    <Setter Property="Foreground" Value="#DCDCDC" />
  </Style>

  <Style Selector="ContextMenu MenuItem">
    <Setter Property="Foreground" Value="#DCDCDC" />
  </Style>

  <Style Selector="StackPanel.Toolbar">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#1C2128" Offset="0" />
        <GradientStop Color="#161B22" Offset="1" />
      </LinearGradientBrush>
    </Setter>
  </Style>

  <!-- Toolbar Text -->
  <Style Selector="StackPanel.Toolbar TextBlock">
    <Setter Property="Foreground" Value="#C9D1D9" />
  </Style>

  <!-- CheckBox -->
  <Style Selector="CheckBox">
    <Setter Property="Foreground" Value="#C9D1D9" />
  </Style>

  <Style Selector="DockPanel.StatusBar">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#33E0FF" Offset="0" />
        <GradientStop Color="#00B8D9" Offset="1" />
      </LinearGradientBrush>
    </Setter>
  </Style>

  <Style Selector="DockPanel.StatusBar TextBlock">
    <Setter Property="Foreground" Value="#0D1117" />
  </Style>

  <Style Selector="avaloniaEdit|TextEditor">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#0D1117" Offset="0" />
        <GradientStop Color="#0A0E13" Offset="1" />
      </LinearGradientBrush>
    </Setter>
    <Setter Property="Foreground" Value="#C9D1D9" />
  </Style>

  <Style Selector="GridSplitter">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,0%">
        <GradientStop Color="#3D444D" Offset="0" />
        <GradientStop Color="#30363D" Offset="0.5" />
        <GradientStop Color="#3D444D" Offset="1" />
      </LinearGradientBrush>
    </Setter>
  </Style>

  <Style Selector="Border">
    <Setter Property="BorderBrush">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#3D444D" Offset="0" />
        <GradientStop Color="#30363D" Offset="1" />
      </LinearGradientBrush>
    </Setter>
  </Style>

  <!-- TextBlock - Global text styling -->
  <Style Selector="TextBlock">
    <Setter Property="Foreground" Value="#DCDCDC" />
  </Style>

  <!-- Dialog styling -->
  <Style Selector="Window.dialog">
    <Setter Property="Background" Value="#161B22" />
    <Setter Property="Foreground" Value="#DCDCDC" />
  </Style>

  <Style Selector="Window.dialog TextBlock">
    <Setter Property="Foreground" Value="#DCDCDC" />
  </Style>

  <!--  Default Button Style (Skeuomorphic)  -->
  <Style Selector="Button">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#2A2F38" Offset="0" />
        <GradientStop Color="#21262D" Offset="0.5" />
        <GradientStop Color="#1C2128" Offset="1" />
      </LinearGradientBrush>
    </Setter>
    <Setter Property="Foreground" Value="#C9D1D9" />
    <Setter Property="BorderBrush">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#3D444D" Offset="0" />
        <GradientStop Color="#30363D" Offset="1" />
      </LinearGradientBrush>
    </Setter>
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="CornerRadius" Value="5" />
    <Setter Property="Padding" Value="14,7" />
    <Setter Property="HorizontalContentAlignment" Value="Center" />
    <Setter Property="VerticalContentAlignment" Value="Center" />
    <Setter Property="FontWeight" Value="SemiBold" />
    <Setter Property="MinWidth" Value="80" />
    <Setter Property="Effect">
      <DropShadowEffect Color="#40000000" OffsetX="0" OffsetY="2" BlurRadius="4" />
    </Setter>
  </Style>

  <Style Selector="Button:pointerover">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#3A4048" Offset="0" />
        <GradientStop Color="#30363D" Offset="0.5" />
        <GradientStop Color="#2A2F38" Offset="1" />
      </LinearGradientBrush>
    </Setter>
    <Setter Property="BorderBrush">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#33E0FF" Offset="0" />
        <GradientStop Color="#00D9FF" Offset="1" />
      </LinearGradientBrush>
    </Setter>
    <Setter Property="Effect">
      <DropShadowEffect Color="#6000D9FF" OffsetX="0" OffsetY="2" BlurRadius="6" />
    </Setter>
  </Style>

  <Style Selector="Button:pressed">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#00B8D9" Offset="0" />
        <GradientStop Color="#00D9FF" Offset="0.5" />
        <GradientStop Color="#33E0FF" Offset="1" />
      </LinearGradientBrush>
    </Setter>
    <Setter Property="Foreground" Value="#0D1117" />
    <Setter Property="Effect">
      <DropShadowEffect Color="#80000000" OffsetX="0" OffsetY="1" BlurRadius="2" />
    </Setter>
    <Setter Property="RenderTransform">
      <TranslateTransform Y="1" />
    </Setter>
  </Style>

  <Style Selector="Button:disabled">
    <Setter Property="Opacity" Value="0.5" />
    <Setter Property="Foreground" Value="#656565" />
    <Setter Property="Effect" Value="{x:Null}" />
  </Style>

  <!--  Accent Button Style (Skeuomorphic)  -->
  <Style Selector="Button.accent">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#33E0FF" Offset="0" />
        <GradientStop Color="#00D9FF" Offset="0.5" />
        <GradientStop Color="#00B8D9" Offset="1" />
      </LinearGradientBrush>
    </Setter>
    <Setter Property="Foreground" Value="#0D1117" />
    <Setter Property="BorderBrush">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#66E6FF" Offset="0" />
        <GradientStop Color="#009BBD" Offset="1" />
      </LinearGradientBrush>
    </Setter>
    <Setter Property="Effect">
      <DropShadowEffect Color="#5000D9FF" OffsetX="0" OffsetY="2" BlurRadius="4" />
    </Setter>
  </Style>

  <Style Selector="Button.accent:pointerover">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#66E6FF" Offset="0" />
        <GradientStop Color="#33E0FF" Offset="0.5" />
        <GradientStop Color="#00D9FF" Offset="1" />
      </LinearGradientBrush>
    </Setter>
    <Setter Property="Effect">
      <DropShadowEffect Color="#7000D9FF" OffsetX="0" OffsetY="2" BlurRadius="6" />
    </Setter>
  </Style>

  <Style Selector="Button.accent:pressed">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#009BBD" Offset="0" />
        <GradientStop Color="#00B8D9" Offset="0.5" />
        <GradientStop Color="#00D9FF" Offset="1" />
      </LinearGradientBrush>
    </Setter>
    <Setter Property="Effect">
      <DropShadowEffect Color="#90000000" OffsetX="0" OffsetY="1" BlurRadius="2" />
    </Setter>
    <Setter Property="RenderTransform">
      <TranslateTransform Y="1" />
    </Setter>
  </Style>

  <Style Selector="Button.accent:disabled">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#99F0FF" Offset="0" />
        <GradientStop Color="#66ECFF" Offset="1" />
      </LinearGradientBrush>
    </Setter>
    <Setter Property="Opacity" Value="0.5" />
    <Setter Property="Effect" Value="{x:Null}" />
  </Style>
</Styles>
