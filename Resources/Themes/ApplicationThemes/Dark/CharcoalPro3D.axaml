<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:avaloniaEdit="https://github.com/avaloniaui/avaloniaedit">
  <!--
    Charcoal Pro 3D Theme - Skeuomorphic version of Charcoal Pro
    Accent Color: Amber (#FFA726)
    Design: Moderate skeuomorphism with gradients, shadows, and depth
  -->

  <Design.PreviewWith>
    <Border Padding="20" Width="800" Height="600">
      <StackPanel Spacing="10">
        <Menu>
          <MenuItem Header="File">
            <MenuItem Header="Open" />
            <MenuItem Header="Save" />
            <Separator />
            <MenuItem Header="Exit" />
          </MenuItem>
        </Menu>
        <StackPanel Orientation="Horizontal" Spacing="10">
          <Button Content="Default Button" />
          <Button Content="Accent Button" Classes="accent" />
        </StackPanel>
        <CheckBox Content="Sample CheckBox" />
      </StackPanel>
    </Border>
  </Design.PreviewWith>

  <Style Selector="Window">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#202020" Offset="0" />
        <GradientStop Color="#1A1A1A" Offset="1" />
      </LinearGradientBrush>
    </Setter>
  </Style>

  <!-- Menu Bar -->
  <Style Selector="Menu">
    <Setter Property="Background" Value="#242424" />
    <Setter Property="Foreground" Value="#DCDCDC" />
  </Style>

  <!-- Menu Items -->
  <Style Selector="MenuItem">
    <Setter Property="Foreground" Value="#E0E0E0" />
  </Style>

  <Style Selector="MenuItem:pointerover /template/ ContentPresenter">
    <Setter Property="Background" Value="#2E2E2E" />
    <Setter Property="Foreground" Value="#FFFFFF" />
  </Style>

  <Style Selector="MenuItem:selected /template/ ContentPresenter">
    <Setter Property="Background" Value="#2E2E2E" />
    <Setter Property="Foreground" Value="#FFFFFF" />
  </Style>

  <Style Selector="MenuItem:disabled /template/ ContentPresenter">
    <Setter Property="Foreground" Value="#656565" />
  </Style>

  <Style Selector="MenuItem /template/ Border#PART_PopupBorder">
    <Setter Property="Background" Value="#202020" />
    <Setter Property="BorderBrush" Value="#3A3A3A" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="Padding" Value="2" />
  </Style>

  <!-- Separator -->
  <Style Selector="Separator">
    <Setter Property="Background" Value="#3A3A3A" />
    <Setter Property="Height" Value="1" />
    <Setter Property="Margin" Value="2,4" />
  </Style>

  <!-- Context Menu -->
  <Style Selector="ContextMenu">
    <Setter Property="Background" Value="#202020" />
    <Setter Property="BorderBrush" Value="#3A3A3A" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="Padding" Value="2" />
    <Setter Property="Foreground" Value="#DCDCDC" />
  </Style>

  <Style Selector="ContextMenu MenuItem">
    <Setter Property="Foreground" Value="#DCDCDC" />
  </Style>

  <Style Selector="StackPanel.Toolbar">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#2A2A2A" Offset="0" />
        <GradientStop Color="#242424" Offset="1" />
      </LinearGradientBrush>
    </Setter>
  </Style>

  <!-- Toolbar Text -->
  <Style Selector="StackPanel.Toolbar TextBlock">
    <Setter Property="Foreground" Value="#E0E0E0" />
  </Style>

  <!-- CheckBox -->
  <Style Selector="CheckBox">
    <Setter Property="Foreground" Value="#E0E0E0" />
  </Style>

  <Style Selector="DockPanel.StatusBar">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#FFB74D" Offset="0" />
        <GradientStop Color="#FF8F00" Offset="1" />
      </LinearGradientBrush>
    </Setter>
  </Style>

  <Style Selector="DockPanel.StatusBar TextBlock">
    <Setter Property="Foreground" Value="#1A1A1A" />
  </Style>

  <Style Selector="avaloniaEdit|TextEditor">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#1A1A1A" Offset="0" />
        <GradientStop Color="#171717" Offset="1" />
      </LinearGradientBrush>
    </Setter>
    <Setter Property="Foreground" Value="#E0E0E0" />
  </Style>

  <Style Selector="GridSplitter">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,0%">
        <GradientStop Color="#464646" Offset="0" />
        <GradientStop Color="#3A3A3A" Offset="0.5" />
        <GradientStop Color="#464646" Offset="1" />
      </LinearGradientBrush>
    </Setter>
  </Style>

  <Style Selector="Border">
    <Setter Property="BorderBrush">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#464646" Offset="0" />
        <GradientStop Color="#3A3A3A" Offset="1" />
      </LinearGradientBrush>
    </Setter>
  </Style>

  <!-- TextBlock - Global text styling -->
  <Style Selector="TextBlock">
    <Setter Property="Foreground" Value="#E0E0E0" />
  </Style>

  <!-- Dialog styling -->
  <Style Selector="Window.dialog">
    <Setter Property="Background" Value="#242424" />
    <Setter Property="Foreground" Value="#E0E0E0" />
  </Style>

  <Style Selector="Window.dialog TextBlock">
    <Setter Property="Foreground" Value="#E0E0E0" />
  </Style>

  <!--  Default Button Style (Skeuomorphic)  -->
  <Style Selector="Button">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#3A3A3A" Offset="0" />
        <GradientStop Color="#2E2E2E" Offset="0.5" />
        <GradientStop Color="#242424" Offset="1" />
      </LinearGradientBrush>
    </Setter>
    <Setter Property="Foreground" Value="#E0E0E0" />
    <Setter Property="BorderBrush">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#464646" Offset="0" />
        <GradientStop Color="#3A3A3A" Offset="1" />
      </LinearGradientBrush>
    </Setter>
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="CornerRadius" Value="5" />
    <Setter Property="Padding" Value="14,7" />
    <Setter Property="HorizontalContentAlignment" Value="Center" />
    <Setter Property="VerticalContentAlignment" Value="Center" />
    <Setter Property="FontWeight" Value="SemiBold" />
    <Setter Property="MinWidth" Value="80" />
    <Setter Property="Effect">
      <DropShadowEffect Color="#40000000" OffsetX="0" OffsetY="2" BlurRadius="4" />
    </Setter>
  </Style>

  <Style Selector="Button:pointerover">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#464646" Offset="0" />
        <GradientStop Color="#3A3A3A" Offset="0.5" />
        <GradientStop Color="#2E2E2E" Offset="1" />
      </LinearGradientBrush>
    </Setter>
    <Setter Property="BorderBrush">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#FFB74D" Offset="0" />
        <GradientStop Color="#FFA726" Offset="1" />
      </LinearGradientBrush>
    </Setter>
    <Setter Property="Effect">
      <DropShadowEffect Color="#60FFA726" OffsetX="0" OffsetY="2" BlurRadius="6" />
    </Setter>
  </Style>

  <Style Selector="Button:pressed">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#FF8F00" Offset="0" />
        <GradientStop Color="#FFA726" Offset="0.5" />
        <GradientStop Color="#FFB74D" Offset="1" />
      </LinearGradientBrush>
    </Setter>
    <Setter Property="Foreground" Value="#1A1A1A" />
    <Setter Property="Effect">
      <DropShadowEffect Color="#80000000" OffsetX="0" OffsetY="1" BlurRadius="2" />
    </Setter>
    <Setter Property="RenderTransform">
      <TranslateTransform Y="1" />
    </Setter>
  </Style>

  <Style Selector="Button:disabled">
    <Setter Property="Opacity" Value="0.5" />
    <Setter Property="Foreground" Value="#656565" />
    <Setter Property="Effect" Value="{x:Null}" />
  </Style>

  <!--  Accent Button Style (Skeuomorphic)  -->
  <Style Selector="Button.accent">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#FFB74D" Offset="0" />
        <GradientStop Color="#FFA726" Offset="0.5" />
        <GradientStop Color="#FF8F00" Offset="1" />
      </LinearGradientBrush>
    </Setter>
    <Setter Property="Foreground" Value="#1A1A1A" />
    <Setter Property="BorderBrush">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#FFC266" Offset="0" />
        <GradientStop Color="#E67E00" Offset="1" />
      </LinearGradientBrush>
    </Setter>
    <Setter Property="Effect">
      <DropShadowEffect Color="#50FFA726" OffsetX="0" OffsetY="2" BlurRadius="4" />
    </Setter>
  </Style>

  <Style Selector="Button.accent:pointerover">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#FFC266" Offset="0" />
        <GradientStop Color="#FFB74D" Offset="0.5" />
        <GradientStop Color="#FFA726" Offset="1" />
      </LinearGradientBrush>
    </Setter>
    <Setter Property="Effect">
      <DropShadowEffect Color="#70FFA726" OffsetX="0" OffsetY="2" BlurRadius="6" />
    </Setter>
  </Style>

  <Style Selector="Button.accent:pressed">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#E67E00" Offset="0" />
        <GradientStop Color="#FF8F00" Offset="0.5" />
        <GradientStop Color="#FFA726" Offset="1" />
      </LinearGradientBrush>
    </Setter>
    <Setter Property="Effect">
      <DropShadowEffect Color="#90000000" OffsetX="0" OffsetY="1" BlurRadius="2" />
    </Setter>
    <Setter Property="RenderTransform">
      <TranslateTransform Y="1" />
    </Setter>
  </Style>

  <Style Selector="Button.accent:disabled">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#FFDBAA" Offset="0" />
        <GradientStop Color="#FFD180" Offset="1" />
      </LinearGradientBrush>
    </Setter>
    <Setter Property="Opacity" Value="0.5" />
    <Setter Property="Effect" Value="{x:Null}" />
  </Style>
</Styles>
