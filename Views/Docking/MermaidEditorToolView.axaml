<UserControl
  x:Class="MermaidPad.Views.Docking.MermaidEditorToolView"
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:docking="clr-namespace:MermaidPad.ViewModels.Docking"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:uc="clr-namespace:MermaidPad.Views.UserControls"
  d:DesignHeight="450"
  d:DesignWidth="400"
  x:DataType="docking:MermaidEditorToolViewModel"
  mc:Ignorable="d">

  <!--
    This view hosts the MermaidEditorView UserControl within a dockable tool panel.
    The DataContext is MermaidEditorToolViewModel, which wraps MermaidEditorViewModel.
    We bind the nested MermaidEditorView's DataContext to the Editor property.
  -->
  <uc:MermaidEditorView x:Name="MermaidEditor" DataContext="{Binding Editor}" />

</UserControl>
