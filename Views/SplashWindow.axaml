<Window
  x:Class="MermaidPad.Views.SplashWindow"
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:MermaidPad"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:vm="clr-namespace:MermaidPad.ViewModels"
  Title="MermaidPad"
  Width="300"
  Height="400"
  d:DesignHeight="800"
  d:DesignWidth="800"
  x:DataType="vm:SplashWindowViewModel"
  Background="Transparent"
  Icon="/Assets/AppIcon.ico"
  PointerPressed="OnPointerPressed"
  SystemDecorations="None"
  WindowStartupLocation="CenterScreen"
  mc:Ignorable="d">

  <Design.DataContext>
    <vm:SplashWindowViewModel />
  </Design.DataContext>

  <DockPanel>
    <Image DockPanel.Dock="Top" Source="/Assets/SplashScreen.png" />
    <TextBlock
      HorizontalAlignment="Center"
      DockPanel.Dock="Bottom"
      FontSize="16"
      Text="{Binding Source={x:Static local:AppMetadata.Copyright}, Mode=OneTime}" />
    <TextBlock
      HorizontalAlignment="Center"
      DockPanel.Dock="Bottom"
      FontSize="20"
      FontWeight="ExtraBold"
      Text="{Binding Source={x:Static local:AppMetadata.FileVersion}, Mode=OneTime}" />
  </DockPanel>
</Window>
