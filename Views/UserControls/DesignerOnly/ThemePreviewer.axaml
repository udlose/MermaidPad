<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="MermaidPad.Views.UserControls.DesignerOnly.ThemePreviewer">
  
  <!-- Design-time preview of various controls to visualize themes and styles -->
  <Border Padding="20" Width="800" Height="600">
    <StackPanel Spacing="10">
      <Menu>
        <MenuItem Header="File">
          <MenuItem Header="Open" InputGesture="Ctrl+O" />
          <MenuItem Header="Save" InputGesture="Ctrl+S">
            <MenuItem Header="Run" InputGesture="Ctrl+R" IsChecked="True" />
            <PathIcon Data="M10,1 L10,19 L19,10 Z" Width="16" Height="16" />
            <PathIcon Data="M4,6 L8,10 L14,4 L14,6 L8,12 L4,8 Z" />
          </MenuItem>
          <Separator />
          <MenuItem Header="Exit" />
        </MenuItem>
      </Menu>
      <StackPanel Orientation="Horizontal" Spacing="10">
        <Button Content="Default Button" />
        <Button Content="Accent Button" Classes="accent" />
      </StackPanel>
      <CheckBox Content="Unchecked CheckBox" />
      <CheckBox Content="Checked CheckBox" IsChecked="True" />
      <CheckBox Content="Disabled CheckBox" IsEnabled="False" />
    </StackPanel>
  </Border>
</UserControl>
